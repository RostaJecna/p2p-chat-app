{
  "Urls": "http://0.0.0.0:8000/",
  "AllowedHosts": "*",
  "Peer2P": {
    "Global": {
      "AppPeerId": null,
      "NetworkInterfaceId": 2
    },
    "Communication": {
      "BroadcastPort": 9876,
      "MessagesBufferSize": 16384,
      "MaxMessages" : 100,
      "Commands": {
        "OnRequest": "hello",
        "OnNewMessage": "new_message"
      },
      "Status": {
        "OnResponse": "ok"
      }
    },
    "Timing": {
      "UdpDiscoveryInterval": 10000,
      "ClientTimeoutDelay": 18000
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
